<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MRNNexus.WPFClient"
             xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" x:Class="MRNNexus.WPFClient.Models.ImageViewer"
             mc:Ignorable="d" Height="200" Width="210">
    <Viewbox Width="300" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Background="#FFF1F1F1" Width="307">
            <Image x:Name="image" Height="100" Margin="62,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182" OpacityMask="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Stretch="UniformToFill" StretchDirection="DownOnly"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="54" Margin="10,130,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>

        </Grid>
    </Viewbox>
</UserControl>
