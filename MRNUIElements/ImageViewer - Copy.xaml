<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MRNUIElements"
             xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" x:Class="MRNUIElements.ImageViewer"
             mc:Ignorable="d" Height="200" Width="200">
    <Grid Background="#FFF1F1F1">
        <Image x:Name="image" Height="100" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182">
            <Image.Effect>
                <ee:BlindsTransitionEffect Orientation="Vertical"/>
            </Image.Effect>
        </Image>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="54" Margin="10,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>

    </Grid>
</UserControl>
