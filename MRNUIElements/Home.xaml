<Page x:Class="MRNUIElements.NexusHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Controllers="clr-namespace:MRNUIElements.Controllers"
      xmlns:Custom="http://schemas.awesomium.com/winfx"
      xmlns:MRNNexus_Model="clr-namespace:MRNNexus_Model;assembly=MRNNexus_Model"
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
      xmlns:local="clr-namespace:MRNUIElements"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:schedule="clr-namespace:Syncfusion.UI.Xaml.Schedule;assembly=Syncfusion.SfSchedule.WPF"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      mc:Ignorable="d" Width="1200" Height="900">
    <Page.Resources>
      
            <CollectionViewSource x:Key="dTO_CalendarData" d:DesignSource="{d:DesignInstance {x:Type MRNNexus_Model:DTO_CalendarData}, CreateList=True}" />
        
    </Page.Resources>
    <Viewbox>
    <Grid x:Name="jojo">
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>


        </Grid.ColumnDefinitions>
        <Grid x:Name="MainGrid"
              HorizontalAlignment="Stretch"
              Background="Transparent" Width="1200" Height="900">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="29*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="185*" />
                <RowDefinition Height="267*"/>
            </Grid.RowDefinitions>
            <Menu x:Name="MainMenu"
                  Height="35"
                  VerticalAlignment="Top" Margin="10,0,-10,0" Grid.ColumnSpan="2">
                <MenuItem x:Name="FileMenu" Header="_Claim">
                    <MenuItem x:Name="NewCommand"
                              Command="New"
                              Header="_New" />
                    <MenuItem x:Name="OpenClaim"
                              Command="Open"
                              Header="_Open" />
                    <Separator />
                    <MenuItem x:Name="KillClaim" Header="_Kill Claim" />
                    <MenuItem x:Name="RescueClaim" Header="R_escue Claim" />
                    <Separator />
                    <MenuItem x:Name="PrintClaim" Header="_Print (Ctrl + P)" />
                    <MenuItem x:Name="Exit" Header="_Exit" />
                    <Separator />
                </MenuItem>
                <Separator />
                <MenuItem x:Name="ViewMenu" Header="_View">
                    <MenuItem x:Name="Statistics" Header="Statistics" />
                    <MenuItem x:Name="Contest" Header="Contest..." />

                </MenuItem>
                <Separator />
                <MenuItem x:Name="OptionMenu" Header="_Options">
                    <MenuItem x:Name="MilestoneMenu" Header="_Milestones" />
                    <MenuItem x:Name="Theme" Header="Choose Theme" />

                </MenuItem>

            </Menu>


            <!--<Grid x:Name="grid"
                      Margin="237,-844,-65,0"
                      Background="Transparent" Height="388" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="13*" />
                    <ColumnDefinition Width="181*" />
                </Grid.ColumnDefinitions>
                <Canvas x:Name="canvas"
                            Grid.ColumnSpan="2"
