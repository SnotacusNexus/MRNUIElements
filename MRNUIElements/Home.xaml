                    <Custom:WebControl x:Name="AppointmentWebView"
                                           Canvas.Left="10"
                                           Canvas.Top="10"
                                           Width="662"
                                           Height="422"


                                           Visibility="Collapsed" />
                </Canvas>
            </Grid>-->
            <Grid x:Name="Sched" DataContext="dTO_CalendarData" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="2" Grid.RowSpan="2" >
             <!--  <local:InspectionSchedule x:Name="schedule" />-->
            </Grid>
            <TextBlock x:Name="textBlock"
                       Grid.Row="1"
                       Width="500"
                       Height="30"
                       Margin="216,5,14,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="22"
                       FontStyle="Italic"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="My MRN Claim Services"
                       TextDecorations="Underline"
                       TextWrapping="Wrap" />
            <Canvas
                    MinWidth="150"
                    MinHeight="150" Margin="0,0,0,685" HorizontalAlignment="Right" Width="194" Grid.Column="1" Grid.Row="2">

                <Canvas.Background>
                    <ImageBrush ImageSource="ResourceFiles/MRN CONTRACTING LOGO.png" />
                </Canvas.Background>
            </Canvas>
            <StackPanel
                        Width="154"
                        Height="338"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="2" Margin="0,0,10,10" Grid.RowSpan="2">
                <Button x:Name="button"
                        Width="147"
                        Height="30"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="CustomerAgreementClick"
                        Content="Customer Agreement"
                        FontSize="15"
                        Style="{DynamicResource normal}" />
                <Button x:Name="Invoice_Viewer"
                        Width="147"
                        Height="23"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="InvoicePageBtn"
                        Content="Invoice Viewer"
                        FontSize="22"
                        Style="{DynamicResource normal}" />
                <Button x:Name="PaymentEntryPageBtn"
                        Width="144"
                        Height="32"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="PaymentEntryPagebtn"
                        Content="Payment Entry"
                        FontSize="22"
                        Style="{DynamicResource normal}" />
                <Button x:Name="DocumentUpload"
                        Width="144"
                        Height="40"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="DocumentUpload_Click"
                        Style="{DynamicResource normal}">
                    <TextBlock FontSize="12"
                               Text="Upload Claim Documents"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />
                </Button>
                <Button x:Name="ScopeEntry"
                        Width="144"
                        Height="35"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="ScopeEntryButton"
                        Content="Scope Entry"
                        FontSize="22"
                        Style="{DynamicResource normal}" />

                <Button x:Name="CapOut_Viewer"
                        Width="147"
                        Height="40"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Click="ViewCapOutButton"
                        Content="View Capout"
                        FontSize="22"
                        Style="{DynamicResource normal}" />

                <Button x:Name="Roof_Order_Btn"
                        Width="147"
                        Height="38"
                        Margin="1,5,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="button_Click"
                        Content="Order Roof"
                        FontSize="22"
                        Style="{DynamicResource normal}" />
            </StackPanel>
                <Frame x:Name="frame" Content="Page" HorizontalAlignment="Left" Height="810" Margin="50,10,0,0" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Top" Width="914">
                    

</Frame>

            </Grid>

