<UserControl
    x:Class="DiagramBuilder.View.DiagramBuilder1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:DiagramBuilder.View"
    xmlns:flyout="http://schemas.syncfusion.com/wpf"
    xmlns:vm="clr-namespace:DiagramBuilder.ViewModel"
    xmlns:util="clr-namespace:DiagramBuilder.Utility"
    xmlns:nav="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:input="http://schemas.syncfusion.com/wpf"
    xmlns:radialmenu="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <EventSetter Event="Button.Click" Handler="Button_Click"></EventSetter>
        </Style>

        <Style TargetType="input:DropDownButton" x:Key="DropDownButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="input:DropDownButton">
                        <Grid VerticalAlignment="Top">
                            <Button Width="35" Height="25"  Background="Transparent" Style="{StaticResource ButtonStyle}"  BorderThickness="0" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                                <Grid >
                                <Grid HorizontalAlignment="Left" Height="16" VerticalAlignment="Center" Width="15" Margin="3,0,0,0">
                                    <Path Data="M2,2.0000014 L2,6 L5.0000005,6 L5.0000005,2.0000014 z M0,0 L2,0 L10.062999,1.4603138E-06 L11.999998,0 L11.999998,6 L10.062999,6 L10.062999,2.0000014 L6.9370003,2.0000014 L6.9370003,6 L8,6 L9,6 L9,7 L8,7 L8,8 L2,8 L2,12 L3,12 L3,14 L1,14 L0,14 z" Fill="#FF727272" Margin="0,0,3,2" Stretch="Fill" UseLayoutRounding="False"/>
                                    <Path Data="M6,1.0000002 L7,1.0000002 L7,2.0000002 L6,2.0000002 z M7,0 L9,0 L10.000999,0 L10.001,4.0000014 L11.000001,4.0000014 L11.000001,7.0000014 L10,7.0000014 L10,8 L8.9990005,8 L8.9990005,9 L2.0009999,9 L2,9 L1.0010002,9 L0,9 L0,8 L0,3.0000002 L0,2.0000002 L6,2.0000002 L6,3.0000002 L1.0010002,3.0000002 L1.0010002,8 L2,8 L2,6.0000005 L3.0000002,6.0000005 L3.0000002,5.0000005 L4.000001,5.0000005 L4.000001,4.0000014 L9,4.0000014 L9,1 L7,1 z" Fill="#FFEAC282" Margin="4,7,0,0" Stretch="Fill" UseLayoutRounding="False"/>                                    
                                </Grid>
                                    <Path Data="M2.4139893E-06,0 L6.0000024,2.5 L0,5.0000048 z" Fill="Gray" HorizontalAlignment="Right" Height="8" Stretch="Fill"  VerticalAlignment="Bottom" Width="6" Margin="0,0,3,0"/>
                                </Grid>
                            </Button>
                            <Popup Name="PART_Popup"
                                               AllowsTransparency="True"
                                               Focusable="False"
                                               IsOpen="{Binding Path=IsDropDownOpen,
                                                                RelativeSource={RelativeSource AncestorType={x:Type input:DropDownButton}}}"
                                               Placement="Bottom"
                                               PopupAnimation="Fade"
                                               StaysOpen="False"
                                               VerticalOffset="-2">
                                <Border Background="#ffffff" BorderThickness="1" BorderBrush="LightGray">
                                    <ItemsPresenter Name="Presenter"
                                                                        Margin="0"
                                                                        Grid.IsSharedSizeScope="true"
                                                                        KeyboardNavigation.DirectionalNavigation="Cycle"
                                                                        KeyboardNavigation.TabNavigation="Cycle"
                                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                            </Popup>
                        </Grid>
                        <!--</Border>-->
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
   
        <Grid x:Name="rootgrid" Background="#ffffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
      
        <StackPanel Grid.Column="0">
            <Grid Background="#ffffff">
                <StackPanel Visibility="{Binding Visibility, ElementName=expandButton}">
                    <Button  x:Name="expandButton" Visibility="Collapsed"  Width="25" Height="25" Background="#ffffff" BorderThickness="0" Margin="0,5,0,0" FontWeight="Bold"  Click="expandButton_Click" HorizontalAlignment="Center" Command="{Binding HeaderVisibility, ElementName=propertyPanel}" CommandParameter="Expand">
                        <Path Data="M2.4139893E-06,0 L6.0000024,2.5 L0,5.0000048 z" Fill="Gray" HorizontalAlignment="Left" Height="8" Stretch="Fill"  VerticalAlignment="Center" Width="8" />
                    </Button>
                    <input:DropDownButton x:Name="expandDropDown" Style="{StaticResource DropDownButtonStyle}" Padding="1" IsSmallImageVisible="False" Width="35" Height="25">
                        <input:RibbonMenuItem Header="Basic Shapes" Command="{Binding ShowSymbolGroup, ElementName=propertyPanel}" CommandParameter="Basic Shapes"/>
                        <input:RibbonMenuItem Header="BMPN Shapes"  Command="{Binding ShowSymbolGroup, ElementName=propertyPanel}" CommandParameter="BPMN Shapes"></input:RibbonMenuItem>
                        <input:RibbonMenuItem Header="Electricals"  Command="{Binding ShowSymbolGroup, ElementName=propertyPanel}" CommandParameter="Electrical"/>
                        <input:RibbonMenuItem Header="Arrows"  Command="{Binding ShowSymbolGroup, ElementName=propertyPanel}" CommandParameter="Arrow"/>
                    </input:DropDownButton>
                </StackPanel>

                <TextBlock Text="Shapes" FontSize="15" FontWeight="SemiBold" Visibility="{Binding Visibility, ElementName=collpaseButton}" Foreground="#2b579a" HorizontalAlignment="Left" Margin="15,5,0,5"/>
                <Button x:Name="collpaseButton" Width="25" Height="25" Background="#ffffff" BorderThickness="0" Margin="0,0,15,0" FontWeight="Bold" Click="collpaseButton_Click" HorizontalAlignment="Right" Command="{Binding HeaderVisibility, ElementName=propertyPanel}" CommandParameter="Collapse">
                    <Path Data="M6.0000052,0 L6.0000052,5 L0,2.5000048 z" Fill="Gray" HorizontalAlignment="Left" Height="8" Stretch="Fill"  VerticalAlignment="Center" Width="8" />
                </Button>
            </Grid>
            <view:StencilView DataContext="{Binding Stencil}" Width="245" Grid.Column="0" x:Name="propertyPanel"/>
        </StackPanel>
        
        <view:TabbedDiagrams Grid.Column="1" MouseDoubleClick="TappedDiagrams_OnMouseDoubleClick"/>
       
    </Grid>
</UserControl>
    