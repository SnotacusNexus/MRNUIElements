<Page x:Class="MRNUIElements.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MRNUIElements"
      mc:Ignorable="d" 
		Background="{StaticResource BackgroundGradient}"
      Title="Edit User Page">

    <Grid Background="{StaticResource BackgroundGradient}" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="25" Foreground="White" FontWeight="Bold" TextAlignment="Center" Padding="10" Text="Add / Edit User"/>
			<StackPanel>
				<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
				<TextBlock/>
					<TextBox x:Name="UserName" Height="25" TextWrapping="Wrap" Text="Username"/>
					<TextBox x:Name="Password" Height="25" TextWrapping="Wrap" Text="Password123"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button  Content="Commit"/>
				</StackPanel>
						
			</StackPanel>
        </StackPanel>
    </Grid>
</Page>
