<Window x:Class="MRNUIElements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MRNUIElements"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MRN Claim Nexus"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d" Grid.IsSharedSizeScope="True" Width="1600" Height="1400">


    <Frame x:Name="MRNClaimNexusMainFrame"
           Margin="0"
           HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center"
           Background="{StaticResource BackgroundGradient}"
           NavigationUIVisibility="Hidden"
           ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1600" Height="1400"   />
</Window>
